<%- include('../partials/header', { title: 'Passenger List' }) %>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Passenger List</h4>
        </div>
        <div class="card-body">
            <% if (typeof error_msg != 'undefined' && error_msg) { %>
                <div class="alert alert-danger"><%= error_msg %></div>
            <% } %>
            
            <% if (typeof success_msg != 'undefined' && success_msg) { %>
                <div class="alert alert-success"><%= success_msg %></div>
            <% } %>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Boarding Point</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- This is a placeholder. In a real application, you would loop through passengers -->
                        <tr>
                            <td>1</td>
                            <td>S12345</td>
                            <td>John Doe</td>
                            <td>Computer Science</td>
                            <td>Main Gate</td>
                            <td><span class="badge bg-success">Boarded</span></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>S12346</td>
                            <td>Jane Smith</td>
                            <td>Electrical Engineering</td>
                            <td>East Campus</td>
                            <td><span class="badge bg-warning">Pending</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted">Last updated: <%= new Date().toLocaleString() %></small>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
